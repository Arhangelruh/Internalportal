@model ProfileViewModel

<div class="wrapper_profile">
    <form class="formprofile" asp-controller="Profile" asp-action="Profile">
        <div class="formslabel">
            <p>
                Фамилия: @Model.Name
            </p>
        </div>
        <div class="formslabel">
            <p> Имя: @Model.LastName</p>
        </div>
        <div class="formslabel">
            <p> Отчество: @Model.MiddleName</p>
        </div>       
    </form>

    <div class="changeprofile">
        <a class="a_element" asp-controller="Profile" asp-action="EditProfile">
            <img title="Просмотр" src="/images/Change_Profile.svg" /> <p class="a_text">Изменить профиль</p>
        </a>        
    </div>
</div>
@section css {
    <link href="~/css/profile.css" rel="stylesheet" asp-append-version="true" />
}