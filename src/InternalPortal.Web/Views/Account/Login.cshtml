@model LoginViewModel

<form class="forms" method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div>
        <h2>Вход в приложение</h2>
           <div asp-validation-summary="ModelOnly" class="text_error"></div>
             <div class="formslabel">
               <label asp-for="UserName"></label><br />
               <input class="formsfield" asp-for="UserName" /><br />
               <span asp-validation-for="UserName" class="text_error"></span>
             </div>
             <div class="formslabel">
               <label asp-for="Password"></label><br />
               <input class="formsfield" asp-for="Password" /><br />
               <span asp-validation-for="Password" class="text_error"></span>
             </div>
             <div class="forms__bottom">
                  <div class="formslabel login_button">
                     <input class="button_classic login_button_width" type="submit" value="Войти" />
                  </div>           
           </div>
    </div>
</form>