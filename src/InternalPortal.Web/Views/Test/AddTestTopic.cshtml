@model TestTopicViewModel

<div class="text_error message">
    @Html.ValidationMessage("Error")
</div>


<form class="forms" method="post" asp-controller="Test" asp-action="AddTestTopic">
    <input type="hidden" asp-for="CashTestId" />
    <div class="formslabel">
        <label asp-for="TopicName">Тема</label><br />
        <input asp-for="TopicName" />
        <span asp-validation-for="TopicName" class="text_error"></span>
    </div>    
    <div class="formslabel">
        <input class="button_classic" type="submit" value="Создать" />
    </div>
</form>