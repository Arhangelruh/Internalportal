@model TestQuestionViewModel

<div class="text_error message">
    @Html.ValidationMessage("Error")
</div>

<form class="forms" method="post" asp-controller="Test" asp-action="AddTestQuestion">
    <input type="hidden" asp-for="TestTopicId" />
    <input type="hidden" asp-for="CashTestId" />
    <div class="formslabel">        
        <input class="formsfield" asp-for="QuestionText" placeholder="Введите текст вопроса." />
        <span asp-validation-for="QuestionText" class="text_error"></span>
    </div>
    <div class="formslabel-button">
        <input class="form-button" type="submit" value="Создать" />
    </div>
</form>

@section css {
    <link href="~/css/test.css" rel="stylesheet" asp-append-version="true" />
}